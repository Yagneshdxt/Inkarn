                @Html.HiddenFor(x => x.Selectedprices[i].Id)
                @Html.CheckBoxFor(x => x.Selectedprices[i].isChecked)
                @Html.LabelFor(a => Model.Selectedprices[i].name, Model.Selectedprices[i].name)
            </label>
        </div>
        @*@Html.LabelFor(a => Model.Selectedprices[i].name, Model.Selectedprices[i].name, htmlAttributes: new { @class = " col-md-offset-2 col-md-10" })*@
        <div class="col-md-10">
            @Html.HiddenFor(x => x.Selectedprices[i].Id)
            @Html.TextBoxFor(a => a.Selectedprices[i].prices, new { @class = "form-control", @plceholder="Enter Price", @numeric = "numeric" })
        </div>
    </div>
